<h2>Edit Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Change Password" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.fields_for :organization do |org_form| %>
      <%= org_form.label :name, "Organization Name" %><br>
      <%= org_form.text_field :name %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :status, "Role" %><br>
    <%= f.radio_button :role, "manager" %>
    <%= f.label :role, "Audit Manager", value: "manager" %>
    <%= f.radio_button :role, "auditor" %>
    <%= f.label :role, "Auditor", value: "manager" %>
    <%= f.radio_button :role, "client" %>
    <%= f.label :role, "Client", value: "manager" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(necessary unless you login through Facebook or GitHub)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
