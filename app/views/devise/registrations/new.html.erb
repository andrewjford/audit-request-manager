<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.fields_for :organization do |org_form| %>
      <%= org_form.label :name, "Organization Name" %><br>
      <%= org_form.text_field :name %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :status, "Role" %><br>
    <%= f.radio_button :role, "manager" %>
    <%= f.label :role, "Audit Manager", value: "manager" %>
    <%= f.radio_button :role, "auditor" %>
    <%= f.label :role, "Auditor", value: "manager" %>
    <%= f.radio_button :role, "client" %>
    <%= f.label :role, "Client", value: "manager" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<div class="small-link">
  <%= render "devise/shared/links" %>
</div>
