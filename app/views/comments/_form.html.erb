<%= form_tag "/projects/#{project.id}/requests/#{request.id}/comments",
  method: :post, id: "comment-form" do %>

  <%= label_tag 'comment[content]', "New Comment" %><br>
  <%= text_area_tag 'comment[content]', nil, size: "40x4" %>
  <br>

  <input type="hidden" name="comment[user_id]" value=<%= current_user.id %>>
  <input type="hidden" name="comment[project_id]" value=<%= project.id %>>
  <input type="hidden" name="comment[request_id]" value=<%= request.id %>>

  <button type="submit" id="submit-comment" class="button-link button-in-site
   form-button">Add Comment</button>
<% end %>
