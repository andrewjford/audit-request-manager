<h1><%= @project.title %></h1>
<p>
  <strong>Client:</strong>
  <%= @project.auditee %>
  <br>
  <strong>Contributors: </strong>
  <% @project.users.each do |user| %>
    <%= link_to "#{user.name}", user_path(user) %>
  <% end %>
  <br>
  <%= link_to 'Edit', edit_project_path(@project) %>
</p>

<h2>Audit Requests</h2>

<div class="request-list">
  <ul>
    <% @project.requests.each do |request| %>
      <li>
        <div class="numbering">
          <%= request.request_number %>.
        </div>
        <%= link_to request.title, project_request_path(@project, request) %>
        - <%= request.description %>
      </li>
    <% end %>
  </ul>
</div>

<div class="below-list">
  <%= link_to 'New Request', new_project_request_path(@project),
    class:"button-link button-in-site" %>
</div>
